@model ChristanCrush.Models.UserModel

<div class="container login-container mt-5 mb-4">
    <h4 class="text-center">Login</h4>
    <div class="row justify-content-center">
        <div class="col-md-4">
            <hr />
            <form asp-action="ProcessLogin">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="email" class="control-label">Email</label>
                    <input asp-for="email" id="email" name="email" class="form-control" />
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="password" class="control-label">Password</label>
                    <input asp-for="password" id="password" name="password" class="form-control" />
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-primary btn-block" />
                </div>
            </form>
            <div>
                 <a class="nav-link" asp-area="" asp-controller="Register" asp-action="Index">Register</a>
            </div>
            <div class="or-separator mt-4 mb-4">
                <hr />
                <span class="or-text">or</span>
                <hr />
            </div>
             <div class="text-center">
                <a href="/Account/ExternalLogin?provider=Google" class="btn btn-primary btn-block">
                    <i class="fab fa-google mr-2"></i> Login with Google
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
