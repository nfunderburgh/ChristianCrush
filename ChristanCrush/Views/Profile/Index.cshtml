@model ChristanCrush.Models.ProfileModel
@{
    ViewData["Title"] = "Create Profile";
    Layout = "_LoggedInLayout";
}
<script>
    
</script>

<h2 style="text-align:center" class="mt-1 mb-1">Create Profile</h2>
<div class="container login-container mt-4 mb-2">
    <form asp-action="CreateProfile" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <!-- IMAGES -->
        <div id="imagesform">
            <div class="profile-image-container">
                <div class="form-group mb-2">
                    <label asp-for="Image1" class="control-label"></label>
                    <input asp-for="Image1" type="file" class="form-control" id="imageInput1" />
                    <span asp-validation-for="Image1" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label class="control-label">Image 1 Preview:</label>
                    <img id="imagePreview1" src="#" alt="Image 1 Preview" style="display: none; max-width: 100%; height: auto;" />
                </div>
            </div>
            <div class="profile-image-container">
                <div class="form-group mb-2">
                    <label asp-for="Image2" class="control-label"></label>
                    <input asp-for="Image2" type="file" class="form-control" id="imageInput2" />
                </div>
                <div class="form-group mb-2">
                    <label class="control-label">Image 2 Preview:</label>
                    <img id="imagePreview2" src="#" alt="Image 2 Preview" style="display: none; max-width: 100%; height: auto;" />
                </div>
            </div>
            <div class="profile-image-container">
                <div class="form-group mb-2">
                    <label asp-for="Image3" class="control-label"></label>
                    <input asp-for="Image3" type="file" class="form-control" id="imageInput3" />
                </div>
                <div class="form-group mb-3">
                    <label class="control-label">Image 3 Preview:</label>
                    <img id="imagePreview3" src="#" alt="Image 3 Preview" style="display: none; max-width: 100%; height: auto;" />
                </div>
            </div>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Bio" class="control-label"></label>
            <textarea asp-for="Bio" class="form-control" placeholder="Tell us a little about yourself..."></textarea>
            <span asp-validation-for="Bio" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Occupation" class="control-label"></label>
            <input asp-for="Occupation" class="form-control" placeholder="Your Occupation" />
            <span asp-validation-for="Occupation" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Hobbies" class="control-label"></label>
            <input asp-for="Hobbies" class="form-control" placeholder="Hiking, Reading, Cooking" />
            <span asp-validation-for="Hobbies" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
</div>