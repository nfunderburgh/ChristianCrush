@model IEnumerable<ChristanCrush.Models.ProfileModel>
@{
    ViewData["Title"] = "Explore";
    Layout = "_LoggedInLayout";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title" style="text-align:center">Matches</h5>
                <div class="container d-flex flex-wrap">
                    @foreach (var item in Model)
                    {
                        <partial name="_matchesCard" model="item"/>
                    }
                </div>
            </div>
        </div>
    </div>
</div>